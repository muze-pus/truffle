{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strictBindCallApply": true,
    "paths": {
      "@truffle/db": ["./src"],
      "@truffle/db/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "express",
      "jest",
      "node",
      "pouchdb"
    ],
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths", "exclude": "*" }
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
