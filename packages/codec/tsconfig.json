{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2016",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es2019"
    ],
    "paths": {
      "@truffle/codec": [
        "./lib"
      ],
      "@truffle/codec/*": [
        "./lib/*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": "*"
      }
    ],
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
