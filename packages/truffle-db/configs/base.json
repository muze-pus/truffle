{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "../dist",
    "paths": {
      "truffle-db": ["../src"],
      "truffle-db/*": ["../src/*"]
    },
    "rootDir": "../src",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
