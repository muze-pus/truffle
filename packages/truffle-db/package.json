{
  "name": "truffle-db",
  "version": "0.1.0",
  "description": "Smart contract data aggregation",
  "keywords": [
    "truffle",
    "smart-contracts",
    "ethereum",
    "database"
  ],
  "author": "g. nicholas d'andrea <gnidan@users.noreply.github.com>",
  "homepage": "https://github.com/trufflesuite/truffle#readme",
  "license": "MIT",
  "main": "dist/src/index.js",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist",
    "types/schema.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trufflesuite/truffle.git"
  },
  "scripts": {
    "clean": "rm -rf ./dist ./types/schema.d.ts",
    "prepare": "yarn build",
    "build": "./bin/build",
    "start": "ts-node-dev -r tsconfig-paths/register ./bin/server",
    "test": "jest --verbose"
  },
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.4",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/pouchdb": "^6.3.2",
    "apollo-server": "^2.3.1",
    "gql2ts": "^1.10.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@gnd/graphql-tools": "^4.0.5-fix.0",
    "@gnd/jsonschema2graphql": "^1.0.15",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.1",
    "module-alias": "^2.1.0",
    "pascal-case": "^2.0.1",
    "pouchdb": "^7.0.0",
    "pouchdb-adapter-memory": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "source-map-support": "^0.5.9",
    "web3-utils": "^1.0.0-beta.37"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json",
        "diagnostics": true
      }
    },
    "moduleNameMapper": {
      "^truffle-db/(.*)": "<rootDir>/src/$1",
      "^truffle-db$": "<rootDir>/src",
      "^test/(.*)": "<rootDir>/test/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/test/*.+(ts|js)",
      "<rootDir>/test/**/test/*.+(ts|js)"
    ]
  },
  "_moduleAliases": {
    "truffle-db": "truffle-db/dist/src"
  }
}
