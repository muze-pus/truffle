{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {
    },
    "rootDir": ".",
    "typeRoots": [
      "../../node_modules/@types/mocha",
      "../../node_modules/@types/node"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
