{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {},
    "rootDir": "lib",
    "typeRoots": [
      "./typings",
      "../../**/node_modules/@types/bn.js",
      "../../**/node_modules/@types/debug",
      "../../**/node_modules/@types/lodash",
      "../../**/node_modules/@types/lodash.clonedeep",
