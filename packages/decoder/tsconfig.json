{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019"],
    "rootDir": "lib",
    "paths": {
      "web3": [
        "node_modules/web3/index",
        "../../node_modules/@types/web3/index"
      ]
    },
    "types": ["node", "mocha"]
  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]

}
